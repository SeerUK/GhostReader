{{!< default}}

{{#post}}
    <header {{#if image}}style="background-image: url({{image}}){{else}}no-cover{{/if}}">
        <h1>{{title}}</h1>
    </header>

    <main role="main">
        <article class="{{post_class}}">
            <section>
                {{content}}
            </section>
        </article>
    </main>
{{/post}}
