{{!< default}}

{{#post}}
    <nav class="gr-nav gr-nav--hover">
        <a href="{{@blog.url}}">
            <img class="gr-nav__logo" src="{{@blog.logo}}" alt="{{@blog.title}}">
            <span class="gr-nav__name">{{@blog.title}}</span>
        </a>
    </nav>

    <header class="gr-hero {{#if image}} gr-hero--fs gr-hero--cover{{/if}}">
        {{#if image}}
            <div class="gr-hero__cover" style="background-image: url({{image}})"></div>
            <div class="gr-hero__overlay"></div>
        {{/if}}

        <section class="gr-hero__page">
            <h1 class="gr-hero__title">{{title}}</h1>
        </section>
    </header>

    <main class="gr-content" role="main">
        <article class="gr-content__post {{post_class}}">
            <section>
                {{content}}
            </section>
        </article>
    </main>
{{/post}}
