{{#foreach posts}}
    <article class="gr-content {{post_class}}">
        <header>
            <h2>
                <a href="{{url}}">{{title}}</a>
            </h2>
        </header>

        <section>
            <p>
                {{excerpt words="26"}} <a class="read-more" href="{{url}}">&raquo;</a>
            </p>
        </section>

        <footer>
            {{#if author.image}}
                <img src="{{author.image}}" alt="{{author.name}}">
            {{/if}}

            {{author}}

            {{tags prefix=" in "}}

            <time datetime="{{date format="YYYY-MM-DD"}}">
                {{date format="DD MMMM YYYY"}}
            </time>
        </footer>
    </article>
{{/foreach}}

{{pagination}}
