{{!< default}}

{{#post}}
    <nav class="gr-nav gr-nav--hover">
        <a href="{{@blog.url}}">
            <img class="gr-nav__logo" src="{{@blog.logo}}" alt="{{@blog.title}}">
            <span class="gr-nav__name">{{@blog.title}}</span>
        </a>
    </nav>

    <header class="gr-hero{{#if image}} gr-hero--cover{{/if}}">
        {{#if image}}
            <div class="gr-hero__cover" style="background-image: url({{image}})"></div>
            <div class="gr-hero__overlay"></div>
        {{/if}}

        <section class="gr-hero__article">
            <div class="gr-hero__tags">{{tags}}</div>

            <h1 class="gr-hero__title">{{title}}</h1>

            <section class="gr-hero__author">
                {{#author}}
                    <figure class="gr-hero__author-image">
                        {{#if image}}
                            <a href="{{url}}">
                                <img src="{{image}}" alt="{{name}}'s Picture" title="{{name}}'s Picture">
                            </a>
                        {{/if}}

                        <div class="gr-hero__author-name">
                            by <a href="{{url}}">{{name}}</a>
                        </div>
                    </figure>
                {{/author}}

                <time datetime="{{date format="YYYY-MM-DD"}}">
                    on {{date format="DD MMMM, YYYY"}}
                </time>
            </section>
        </section>
    </header>

    <main class="gr-content" role="main">
        <article class="gr-content__article {{post_class}}">
            {{content}}
        </article>

        <footer class="gr-content__author">
            {{#author}}
                <figure class="gr-content__author-image">
                    {{#if image}}
                        <a href="{{url}}">
                            <img src="{{image}}" alt="{{name}}'s Picture" title="{{name}}'s Picture">
                        </a>
                    {{/if}}
                </figure>

                <section class="gr-content__author-info">
                    <h4 class="gr-content__author-info-name">
                        <a href="{{url}}">{{name}}</a>
                        {{#if location}}
                            - {{location}}
                        {{/if}}
                    </h4>

                    {{#if bio}}
                        <p class="gr-content__author-info-bio">
                            {{bio}}
                            {{#if website}}
                                <a href="{{website}}">{{website}}</a>
                            {{/if}}
                        </p>
                    {{/if}}
                </section>
            {{/author}}
        </footer>
    </main>

    {{!-- Links to Previous/Next posts --}}
    <aside>
        {{#next_post}}
            <a {{#if image}}style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
                <section>
                    <h2>{{title}}</h2>
                    <p>{{excerpt words="19"}}&hellip;</p>
                </section>
            </a>
        {{/next_post}}

        {{#prev_post}}
            <a {{#if image}}style="background-image: url({{image}}){{else}}no-cover{{/if}}" href="{{url}}">
                <section>
                    <h2>{{title}}</h2>
                    <p>{{excerpt words="19"}}&hellip;</p>
                </section>
            </a>
        {{/prev_post}}
    </aside>

    {{#if @labs.subscribers}}
        <section class="gr-subscribe" style="background-image: url({{asset "img/gr-subscribe.jpg"}})">
            <div class="gr-subscribe__form">
                <h3 class="gr-subscribe__title">Subscribe and get updates</h3>
                {{subscribe_form placeholder="Your Email Address"}}
            </div>
        </section>
    {{/if}}
{{/post}}
